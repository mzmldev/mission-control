{
  "name": "mission-control",
  "private": true,
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev",
    "lint": "turbo run lint",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "check-types": "turbo run check-types",
    "seed": "npx convex run seed:seedAgents",
    "seed:clear": "npx convex run seed:clearAgents",
    "seed:info": "npx convex run seed:getSeedInfo",
    "daemon:start": "pm2 start ecosystem.config.js",
    "daemon:stop": "pm2 stop mc-notifications",
    "daemon:restart": "pm2 restart mc-notifications",
    "daemon:logs": "pm2 logs mc-notifications",
    "standup": "node scripts/daily-standup.js",
    "convex:dev": "npx convex dev",
    "convex:deploy": "npx convex deploy"
  },
  "devDependencies": {
    "prettier": "^3.7.4",
    "turbo": "^2.8.3",
    "typescript": "5.9.2"
  },
  "engines": {
    "node": ">=18"
  },
  "packageManager": "npm@10.9.2",
  "workspaces": [
    "apps/*",
    "packages/*"
  ]
}
